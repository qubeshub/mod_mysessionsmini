<extension version="1.5.0" client="site" type="module">
	<name>mod_mysessions</name>
	<author>HUBzero</author>
	<copyright>Copyright 2005-2015 HUBzero Foundation, LLC.</copyright>
	<license>http://www.gnu.org/licenses/lgpl-3.0.html LGPLv3</license>
	<description>MOD_MYSESSIONS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_mysessions">mod_mysessions.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>assets/css/mod_mysessions.css</filename>
		<filename>assets/js/mod_mysessions.js</filename>
		<filename>mod_mysessions.xml</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_MYSESSIONS_PARAM_CLASS_LABEL" description="MOD_MYSESSIONS_PARAM_CLASS_DESC" />
				<field type="spacer" />
				<field name="show_screenshots" member_dashboard="1" type="list" default="1" label="MOD_MYSESSIONS_PARAM_SHOWSCREENSHOTS_LABEL" description="MOD_MYSESSIONS_PARAM_SHOWSCREENSHOTS_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="show_storage"  member_dashboard="1" type="list" default="1" label="MOD_MYSESSIONS_PARAM_SHOWSTORAGE_LABEL" description="MOD_MYSESSIONS_PARAM_SHOWSTORAGE_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field type="spacer" />

				<field name="quick_launch" member_dashboard="1" type="list" default="1" label="MOD_MYSESSIONS_PARAM_QUICKLAUNCH_LABEL" description="MOD_MYSESSIONS_PARAM_QUICKLAUNCH_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
				<field name="terminate_double_check" member_dashboard="1" type="list" default="1" label="MOD_MYSESSIONS_PARAM_DOUBLECLICK_LABEL" description="MOD_MYSESSIONS_PARAM_DOUBLECLICK_DESC">
					<option value="1">JYes</option>
					<option value="0">JNo</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<languages>
		<language tag="en-GB">en-GB.mod_mysessions.ini</language>
	</languages>
</extension>